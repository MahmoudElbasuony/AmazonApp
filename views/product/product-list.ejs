<div>

    <div class="card mb-3">
        <div class="card-body">
            <a href="/products/create%>" class="btn btn-primary float-right">
                <i class="fa fa-plus"></i> Create Product
            </a>
        </div>
    </div>
    <% if(!products.length){  %>
    <div class="text-center"><b>No Products</b></div>
    <%}  %>
    <% for(let p of products) { %>
    <%- include('./product-thumbnail', {product:p}) %>
    <% } %>
    <% if(totalCount > products.length ) { %>
    <button class="btn btn-link">Load More</button>
    <% } %>
</div>